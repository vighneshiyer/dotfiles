# Get editor completions based on the config schema
"$schema" = 'https://starship.rs/config-schema.json'

# Inserts a blank line between shell prompts
add_newline = false

{{- if eq .chezmoi.fqdnHostname "vighnesh-z16" }}
format = """[‚ÅÇ ](bright-green) $hostname$directory$character"""
{{- else }}
format = """[‚ÅÇ](bright-green) $hostname$directory$character"""
{{- end }}

{{- if eq .chezmoi.fqdnHostname "vighnesh-macbook-pax" }}
right_format = """$python$git_branch$git_state$cmd_duration"""
{{- else }}
right_format = """$git_branch$git_state$cmd_duration"""
{{- end }}

[character]
success_symbol = '[‚ùØ](bold green)'
error_symbol = '[‚ùØ](bold red)'
vimcmd_symbol = '[‚ùØ](bold blue)'               # normal mode
vimcmd_replace_one_symbol = '[‚ùØ](bold purple)'
vimcmd_replace_symbol = '[‚ùØ](bold purple)'
vimcmd_visual_symbol = '[‚ùØ](bold yellow)'

[hostname]
ssh_only = true
ssh_symbol = 'üåê'
format = '[$ssh_symbol$hostname]($style) '

[cmd_duration]
min_time = 1_000
style = "dimmed"

[directory]
truncation_length = 2
style = "bright-yellow"
fish_style_pwd_dir_length = 1

[python]
format = '[${symbol}${pyenv_prefix}(${version} )(\($virtualenv\) )]($style)'

# Disable the package module, hiding it from the prompt completely
[package]
disabled = true
