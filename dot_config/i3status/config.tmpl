# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2
    #output_format = "none"
    markup = "pango"
    color_good =     '#9ece6a'
    color_degraded = '#e0af68'
    color_bad =      '#f7768e'
}

order += "read_file task"
order += "wireless _first_"
order += "volume master"
order += "cpu_usage"

{{- if eq .chezmoi.fqdnHostname "vighnesh-z16" }}
  order += "cpu_temperature 0"
  order += "battery 0"
{{- end }}

{{- if eq .chezmoi.fqdnHostname "vighnesh-t480" }}
  order += "cpu_temperature 0"
  order += "cpu_temperature 1"
  order += "cpu_temperature 2"
  order += "cpu_temperature 3"
  order += "battery 1"
{{- end }}

order += "tztime local"

read_file task {
  format = "%content"
  path = "/tmp/task"
}

wireless _first_ {
    format_up = "W: %essid"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: up"
    format_down = "E: down"
}

volume master {
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    format = "♪ %volume"
}

{{- if eq .chezmoi.fqdnHostname "vighnesh-z16" }}
battery 0 {
{{- end }}
{{- if eq .chezmoi.fqdnHostname "vighnesh-t480" }}
battery 1 {
{{- end }}
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    hide_seconds = true
    path = "/sys/class/power_supply/BAT%d/uevent"
}
# get status: upower -i /org/freedesktop/UPower/devices/battery_BAT1 | grep "state:" | tr -s ' ' | cut -d ' ' -f 3


cpu_usage {
    format = "CPU %usage"
}

{{- if eq .chezmoi.fqdnHostname "vighnesh-t480" }}
cpu_temperature 0 {
    format = "%degrees°"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp2_input"
    max_threshold = 95
}

cpu_temperature 1 {
    format = "%degrees°"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp3_input"
    max_threshold = 95
}

cpu_temperature 2 {
    format = "%degrees°"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp4_input"
    max_threshold = 95
}

cpu_temperature 3 {
    format = "%degrees°"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp5_input"
    max_threshold = 95
}
{{- end }}

{{- if eq .chezmoi.fqdnHostname "vighnesh-z16" }}
cpu_temperature 0 {
    format = "%degrees°"
    path = "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon6/temp1_input"
    max_threshold = 95
}
{{- end }}


tztime local {
    format = "%a %m/%d %H:%M "
}
